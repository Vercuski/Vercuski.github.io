@page "/Contact"

<PageTitle>Scott Vercuski | Architect</PageTitle>

<RadzenTemplateForm Data="@contactForm" Submit="@((ContactForm args) => { Submit(args); })">
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenText TextStyle="TextStyle.DisplayH4" class="rz-display-flex rz-mt-4 rz-my-0">Contact</RadzenText>
    </RadzenRow>
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-display-flex rz-mt-4 rz-my-0">
            Please feel free to contact me using the form
        </RadzenText>
    </RadzenRow>
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-display-flex rz-mt-4 rz-my-0">
            below and I will get back to you as soon as I can
        </RadzenText>
    </RadzenRow>
    <RadzenCard Class="rz-my-12 rz-mx-auto" Style="max-width: 620px">
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="rem" Class="rz-p-4">
            <RadzenStack Gap="0">
                <RadzenText TextStyle="TextStyle.DisplayH6" class="rz-display-flex rz-mt-4 rz-my-0">Name</RadzenText>
                <RadzenTextBox @bind-Value="@contactForm.Name" Placeholder="Please enter your name" class="rz-my-auto"/>
                <RadzenText TextStyle="TextStyle.DisplayH6" class="rz-display-flex rz-mt-4 rz-mb-0">Email</RadzenText>
                <RadzenTextBox @bind-Value="@contactForm.Email" Placeholder="Please enter your email"/>
                <RadzenText TextStyle="TextStyle.DisplayH6" class="rz-display-flex rz-mt-4 rz-mb-0">Message</RadzenText>
                <RadzenTextArea @bind-Value="@contactForm.Message" Cols="65" Rows="10" Placeholder="Please enter your message"/>
            </RadzenStack>
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Right" Gap="rem" Class="rz-p-4">
            <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Text="Send Message" />
        </RadzenStack>
    </RadzenCard>
</RadzenTemplateForm>

@code {
    public record ContactForm()
    {
        public string Name { get; set; } = String.Empty;
        public string Email { get; set; } = String.Empty;
        public string Message { get; set; } = String.Empty;
    }

    public ContactForm contactForm = new ContactForm();

    public void Submit(ContactForm args)
    {
        // Send email
        // Save to database
        // etc.
    }
}