@page "/Skills"

<PageTitle>Skills</PageTitle>

<RadzenStack class="rz-mx-auto rz-mt-5" style="height: auto; width: auto;" Gap="0px" Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start">
    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H4" Style="font-family: Roboto; font-weight: bold;">SKILLS</RadzenText>
    @foreach(var heading in badges.Select(b => b.Heading).Distinct())
    {
        <RadzenStack class="rz-mx-4 rz-my-2">
            <RadzenText>@heading</RadzenText>
            <RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" JustifyContent="JustifyContent.Left" Gap="1rem">
                    @foreach(var badge in badges.Where(b => b.Heading == heading).OrderBy(x => x.Rank))
                    {
                        <RadzenButton ButtonStyle="ButtonStyle.Light" class="rz-border-radius-6 rz-shadow-6 rz-border-black">
                            @badge.Text
                            @* <RadzenBadge BadgeStyle="BadgeStyle.Primary" Shade="Shade.Lighter" IsPill="@true" Text="@badge.Years.ToString()" class="rz-ml-2" /> *@
                        </RadzenButton>
                    }
                </RadzenStack>
            </RadzenText>
        </RadzenStack>
    }
</RadzenStack>

