@page "/Skills"

<PageTitle>Scott Vercuski | Architect</PageTitle>

<RadzenStack class="rz-mx-auto rz-mt-0" style="height: auto; width: auto;" Gap="0px" Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceAround">
    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H4" Style="rz-mt-5; font-family: Roboto; font-weight: bold;">SKILLS</RadzenText>
    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" Style="rz-mt-5; font-family: Roboto; font-weight: bold;">
        A list of skills I've picked up over the years, ranked top to bottom of familiarity .
    </RadzenText>
</RadzenStack>
<RadzenStack class="rz-mx-auto rz-mt-5" style="height: auto; width: auto;" Gap="0px" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.SpaceAround">
    @foreach(var heading in badges.Select(b => b.Heading).Distinct())
    {
        <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Normal" JustifyContent="JustifyContent.Center" Gap="1rem">
            <RadzenText Style="font-weight: bold">@heading</RadzenText>
            <RadzenText>
                    @foreach(var badge in badges.Where(b => b.Heading == heading))
                    {
                        <RadzenButton ButtonStyle="ButtonStyle.Light" class="rz-mb-3 rz-border-radius-2 rz-shadow-4 rz-border-black">
                            @badge.Text
                        </RadzenButton>
                        <br/>
                    }
            </RadzenText>
        </RadzenStack>
    }
</RadzenStack>

